<!DOCTYPE html>
<html>
<head>
	<title>MadHacks: Sign up</title>
	<link rel="stylesheet" type="text/css" href="/css/inputs.css">
	<link rel="stylesheet" type="text/css" href="/css/application.css">
	<script type="text/javascript" src="/js/jquery.js"></script>
	<script type="text/javascript">
		var showing = 0;
		var shades;
		var orderArr = [
			[0,1,2,3,4,5],
			[1,0,1,2,3,4],
			[2,1,0,1,2,3],
			[3,2,1,0,1,2],
			[4,3,2,1,0,1],
			[5,4,3,2,1,0]
		]
		var order = function(){
			$.each(shades, function(index, obj){				
				var left, zindex, opacity;

				left = $(window).width()/2;
				left -= $(obj).width()/2;
				left += 40*(index-showing);

				zindex = orderArr[showing][index];

				opacity = zindex/5;
				opacity = 1 - opacity;

				$(obj).css({"left":left, "z-index":1000-zindex, "opacity":opacity });
			});
		}
		$(document).ready(function(){
			shades = $(".inner");
			order();
			$(".right").click(function(){
				showing = (showing+1) % shades.length;
				order();
			});
			$(".left").click(function(){
				showing = (showing-1) % shades.length;
				order();
			});
			$("input[name='travel']:radio").change(function () {
				console.log("hello leo")
				$("#venmo").slideToggle();
			});
			$("#apply-attend-school").change(function (){
				$("#school-selector").slideToggle();
			});
			$("#apply-plan-hardware").change(function (){
				$("#plan-hardware-on").slideToggle();
			});
			$("#apply-need-partner, #apply-plan-mentor").change(function (){
				if( $("#apply-need-partner").prop('checked')
				|| $("#apply-plan-mentor").prop('checked') )
					$("#partner").slideDown();
				else
					$("#partner").slideUp();
			});
			$("#resume-button").click(function (){
				console.log("click")
				$("#resume-button-shadow").click();
			});
			$("#resume-button-shadow").change(function(e){
				$("#resume-button").find("div").text(e.target.files[0].name);
				$("#resume-button").addClass("done");
			});
		});
	</script>
</head>
</html>
<form class="container" id="application" action="/user/apply" method="POST">
	<div id="general" class="inner">
		<ul>
			<li class="split">
				<input type="text" id="apply-last-name" name="firstname" placeholder="First Name">
				<input type="text" id="apply-first-name" name="lastname" placeholder="Last Name">
			</li>
			<li class="split">
				<input type="text" id="apply-email" name="email" placeholder="Email">
				<input type="password" id="apply-password" name="password" placeholder="Password">
			</li>
			<li>
				<select id="apply-swag-size" name="swag-size">
					<option selected disabled hidden value=''>Swag Size</option>
					<option value="xs">xSmall</option>
					<option value="s">Small</option>
					<option value="m">Medium</option>
					<option value="l">Large</option>
					<option value="xl">xLarge</option>
					<option value="xxl">xxLarge</option>
					<option value="xxxl">xxxLarge</option>
				</select>
			</li>
			<li>
				<hr>
			</li>
			<li class="split">
				<d>&nbsp;</d>
				<button class="right" type="button"><div>Next</div></button>
			</li>
		</ul>
	</div>
	<div id="school" class="inner">
		<ul>
			<li>
				<input type="checkbox" id="apply-attend-school" name="attend_school" checked>
				<label for="apply-attend-school">Do you attend a university?<div><div></div></div></label>
			</li>
			<li id="school-selector">
				<%include part_school_select %>
			</li>
			<li class="split">
				<%include part_state_select %>
				<%include part_country_select %>
			</li>
			<li class="split">
				<input type="text" id="apply-city" name="city" placeholder="City">
				<input type="text" id="apply-zip" name="zip" placeholder="Zip">
			</li>
			<li class="split">
				<span>Travel Reimbursment: </span>
				<div>
					<input type="radio" id="apply-travel-no" name="travel" value="false" autocomplete="off" checked>
					<label for="apply-travel-no">No:<div><div></div></div></label>
					<input type="radio" id="apply-travel-yes" name="travel" value="true" autocomplete="off">
					<label for="apply-travel-yes">Yes:<div><div></div></div></label>
				</div>
			</li>
			<li id="venmo" class="split" style="display:none;">
				<span>venmo.com/</span>
				<input type="text" id="apply-venmo" name="venmo" placeholder="Venmo ID">
			</li>
			<li>
				<hr>
			</li>
			<li class="split">
				<button class="left" type="button"><div>Previous</div></button>
				<button class="right" type="button"><div>Next</div></button>
			</li>
		</ul>
	</div>
	<div id="food_swag" class="inner">
